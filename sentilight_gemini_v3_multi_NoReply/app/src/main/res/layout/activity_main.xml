<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:contentDescription="IP 주소 설정 화면으로 이동"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings_gear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ipInputView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/settings_icon"
        android:layout_marginTop="20dp"

        android:background="@drawable/transparent_edittext_bg"
        android:hint="Tasmota 전구 IP 주소"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        android:textColorHint="#CCCCCC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/transparent_edittext_bg"
        android:gravity="top|start"
        android:lineSpacingMultiplier="1.2"
        android:padding="16dp"
        android:text="전구를 클릭한 후 기분을 말하세요."
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/ipInputView" />

    <FrameLayout
        android:id="@+id/lightContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/backgroundIconView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ui_main_image"
            android:contentDescription="SentiLight Background Icon" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animatedIconView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            tools:visibility="visible"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/wave_loop" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>